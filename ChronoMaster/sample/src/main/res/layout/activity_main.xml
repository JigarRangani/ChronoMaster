<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/isoResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO 8601 Result:"
        android:tag="ISO 8601 Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slashResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Slash Date Result:"
        android:tag="Slash Date Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/epochResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Epoch Result:"
        android:tag="Epoch Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customTimezoneResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Custom Timezone Result:"
        android:tag="Custom Timezone Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ntpTimeResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NTP Time Result:"
        android:tag="NTP Time Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/relativeTimeResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Relative Time Result:"
        android:tag="Relative Time Result:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/runTestsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Run ChronoMaster Tests" />

</LinearLayout>
